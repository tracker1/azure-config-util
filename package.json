{
  "name": "azure-storage-util",
  "version": "1.0.0",
  "description": "Caching configuration utility uses Azure Table for data store",
  "main": "dist/index.js",
  "config": {
    "MOCHA_OPTS": "--recursive test/unit/",
    "ISPARTA_OPTS": "--report html",
    "COVERAGE_OPTS": "--statements 100 --functions 100 --branches 100 --lines 100"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build-dist": "babel ./src --stage 0 --source-maps-inline -d ./dist",
    "build": "npm run clean && npm run build-dist",
    "lint": "npm run lint-src && npm run lint-test",
    "lint-src": "eslint src",
    "lint-test": "eslint test --global describe,it,beforeEach,afterEach --rule no-unused-expressions:false ",
    "unit": "babel-node -r node_modules/.bin/_mocha $npm_package_config_MOCHA_OPTS",
    "coverage": "babel-node -r node_modules/.bin/isparta cover $npm_package_config_ISPARTA_OPTS node_modules/.bin/_mocha -- $npm_package_config_MOCHA_OPTS",
    "coverage-check": "node node_modules/isparta/node_modules/istanbul/lib/cli check-coverage $npm_package_config_COVERAGE_OPTS",
    "show-report": "node test/open-coverage-report",
    "test": "npm run lint && npm run coverage && (npm run coverage-check || node scripts/open-coverage-report)",
    "postinstall": "npm dedupe",
    "publish-major": "npm run build && npm version major && npm publish && git push origin master && git push origin --tags",
    "publish-minor": "npm run build && npm version minor && npm publish && git push origin master && git push origin --tags",
    "publish-patch": "npm run build && npm version patch && npm publish && git push origin master && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tracker1/azure-config-util.git"
  },
  "author": "Michael J. Ryan <tracker1@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tracker1/azure-config-util/issues"
  },
  "homepage": "https://github.com/tracker1/azure-config-util",
  "dependencies": {
    "azure-storage": "^0.4.3",
    "cc-globals": "^4.0.1",
    "debug": "^2.1.3",
    "i-promise": "^1.1.0",
    "json-stable-stringify": "^1.0.0",
    "repromise": "^3.2.0",
    "safe-clone-deep": "^1.0.5"
  },
  "devDependencies": {
    "babel": "^5.1.11",
    "chai": "^2.1.1",
    "eslint": "^0.17.0",
    "isparta": "^2.2.0",
    "mocha": "^2.2.1",
    "open": "0.0.5",
    "proxyquire": "^1.4.0",
    "rimraf": "^2.3.2",
    "sinon": "^1.13.0",
    "sinon-chai": "^2.7.0"
  }
}
